//The language used is C.
#include <stdio.h>

int main() {
    int num;

    // Number input form user
    printf("Enter the Number: ");
    scanf("%d", &num);

    // Check if the number is even or odd
    if (num % 2 == 0) {
        printf("%d is an Even number.\n", num);
    }
    else {
        printf("%d is Odd number.\n", num);
    }

    return 0;
}
