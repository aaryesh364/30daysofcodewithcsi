#include<stdio.h>

int factorial(int n) {
    if (n == 0 || n == 1) {
       return 1;
    } else {
       return n * factorial(n - 1);
    }
}

int main()
{
    int num;
    printf("Enter the number: ");
    scanf("%d", &num);
    if (num>0)
    {
        printf("%d", factorial(num));
    }
    else{
        printf("The number cannot be negative or zero");
    }
    return 0;

}
